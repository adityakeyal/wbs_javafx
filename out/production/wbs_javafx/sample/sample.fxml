<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import sample.Task?>

<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller" maxHeight="1.7976931348623157E308">
   <children>
      <Pane minWidth="600.0" prefHeight="60.0" style="-fx-background-color: #5153ff;">
            <Button onAction="#load" />
      </Pane>
      <TableView fx:id="taskTable" maxHeight="1.7976931348623157E308" editable="true"
      onKeyPressed="#processKeyPress">
        <columns>
           <TableColumn id="slNoCol" prefWidth="50.0" text="Sl.No." onEditStart="#calStart">
              <cellValueFactory>
                  <PropertyValueFactory property="slNo" />
               </cellValueFactory>
           </TableColumn>
           <TableColumn id="taskCol" prefWidth="200.0" text="Task" editable="true" onEditCommit="#save">
              <cellValueFactory>
                  <PropertyValueFactory property="task" />
               </cellValueFactory>
           </TableColumn>
           <TableColumn id="subTaskCol" prefWidth="300.0" text="Sub Task">
              <cellValueFactory>
                  <PropertyValueFactory property="subTask" />
               </cellValueFactory>
           </TableColumn>

        </columns>
         <items>
            <FXCollections fx:factory="observableArrayList">


            </FXCollections>
         </items>
      </TableView>
   </children>
</VBox>
